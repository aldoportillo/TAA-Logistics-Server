<p style="color: green"><%= notice %></p>

<div class="row justify-content-between align-items-center">
  <h2 class="col-auto">Employees</h2>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @employees.each do |employee| %>
            <tr>
                <td><%= employee&.name %></td>
                <td><%= employee&.email %></td>
                <td><%= employee&.role %></td>
                <td>
                    <%= link_to 'Edit Employee', employee_path(employee), class: 'btn btn-info' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>