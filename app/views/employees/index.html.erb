<p style="color: green"><%= notice %></p>

<div class="row justify-content-between align-items-center">
  <div class="col-auto d-flex align-items-center">
    <h2 class="me-2">Employees</h2>
    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#helpModalEmployees" title="Help & Instructions">
      <i class="fas fa-question-circle"></i>
    </button>
  </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @employees.each do |employee| %>
            <tr>
                <td><%= employee&.name %></td>
                <td><%= employee&.email %></td>
                <td><%= employee&.role %></td>
                <td>
                    <%= link_to 'Edit Employee', employee_path(employee), class: 'btn btn-info' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<!-- Help Modal -->
<%= render 'shared/help_modal', page_name: 'employees', page_title: 'Employee Management' %>