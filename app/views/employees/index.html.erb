<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @employees.each do |employee| %>
            <tr>
                <td><%= employee&.name %></td>
                <td><%= employee&.email %></td>
                <td><%= employee&.role %></td>
                <td>
                    <%= link_to 'Show', employee_path(employee), class: 'btn btn-info' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>