<h1>Edit Event</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <%= form_for @event do |f| %>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: "form-control" %>
                </div>

                <%= f.submit "Update Event", class: "btn btn-primary" %>
            <% end %>
            <%= link_to "Go Back", event_path(@event), class: "btn btn-secondary" %>
        </div>
    </div>
</div>
