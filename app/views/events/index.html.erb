<div class="header d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <h2 class="me-2">Events</h2>
        <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#helpModalEvents" title="Help & Instructions">
            <i class="fas fa-question-circle"></i>
        </button>
    </div>
    <%= link_to "New Event", new_event_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @events&.each do |event| %>
            <tr>
                <td><%= event.name %></td>
                <td><%= truncate(event.description, length: 50) %></td>
                <td>
                    <%= link_to "Show", event, class: "btn btn-info" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<!-- Help Modal -->
<%= render 'shared/help_modal', page_name: 'events', page_title: 'Event Management' %>
