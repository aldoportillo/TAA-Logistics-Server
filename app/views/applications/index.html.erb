<p style="color: green"><%= notice %></p>

<h1>Applications</h1>

<div id="applications">
  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
  <% @applications.each do |application| %>
    <tr>     
      <td><%= application.first_name %></td>
      <td><%= application.last_name %></td>
      <td><%= application.phone_number %></td>
      <td><%= application.email %></td>
      <td><%= link_to "Show this application", application %></td>
    </tr>
  <% end %>
  </tbody>
</div>
