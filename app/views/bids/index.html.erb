<h2>Upload CSV for Processing</h2>

<div class="p-4">
  <%= form_with url: upload_csv_bids_path, local: true, html: { multipart: true } do |form| %>
    <div class="mb-3">
      <%= form.label :rate_per_mile, "Rate Per Mile $", class: "form-label" %>
      <%= form.text_field :rate_per_mile, class: "form-control" %>
      <p class="form-text text-muted">Enter the rate per mile in dollars excluding FSCH. This includes round trip.</p>
    </div>
    <div class="mb-3">
      <%= form.label :fuel_surcharge, "Fuel Surcharge %", class: "form-label" %>
      <%= form.text_field :fuel_surcharge, class: "form-control" %>
      <p class="form-text text-muted">Enter the fuel surcharge in percentage. This is the percentage of the rate per mile if you wish to implement it.</p>
    </div>
    <div class="mb-3">
      <div class="form-check">
        <%= form.check_box :use_accurate_miles, { class: "form-check-input", checked: true }, "true", "false" %>
        <%= form.label :use_accurate_miles, "Use Accurate Miles", class: "form-check-label" %>
      </div>
      <p class="form-text text-muted">
        <strong>Checked:</strong> Mokena → Ramp → Consignee → Mokena (4-stop accurate route)<br>
        <strong>Unchecked:</strong> Ramp → Consignee → Ramp (3-stop simple route)
      </p>
    </div>
    <div class="mb-3">
      <%= form.label :file, "Select CSV file", class: "form-label" %>
      <%= form.file_field :file, class: "form-control" %>
    </div>
    <div>
      <%= form.submit "Upload and Process", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
