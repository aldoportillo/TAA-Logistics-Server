<h2>Upload CSV for Processing</h2>

<%= form_with url: bids_upload_csv_path, local: true, multipart: true do |form| %>
  <div>
    <%= form.label :rate_per_mile, "Rate Per Mile $"%>
    <%= form.text_field :rate_per_mile %>
  </div>
  <div>
    <%= form.label :fuel_surcharge, "Fuel Surcharge %"%>
    <%= form.text_field :fuel_surcharge %>
  </div>
  <div>
    <%= form.label :file, "Select CSV file" %>
    <%= form.file_field :file %>
  </div>
  <div>
    <%= form.submit "Upload and Process" %>
  </div>
<% end %>
