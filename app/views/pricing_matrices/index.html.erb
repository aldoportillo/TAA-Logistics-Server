<p style="color: green"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <h5 class="mb-0 me-2">Pricing Matrices</h5>
              <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#helpModalPricingMatrices" title="Help & Instructions">
                <i class="fas fa-question-circle"></i>
              </button>
            </div>
            <%= link_to new_pricing_matrix_path, class: "btn btn-primary" do %>
              <i class="fas fa-plus"></i> New Pricing Matrix
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Start Miles</th>
                  <th>End Miles</th>
                  <th>Line Haul (without fuel)</th>
                  <th>Line Haul (with 29.5% fuel)</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @pricing_matrices.each do |pricing_matrix| %>
                  <tr>
                    <td><%= pricing_matrix.start_miles %></td>
                    <td><%= pricing_matrix.end_miles %></td>
                    <td><%= number_to_currency(pricing_matrix.line_haul) %></td>
                    <td><%= number_to_currency(pricing_matrix.line_haul_plus_29_5_fuel_surcharge) %></td>
                    <td class="text-end">
                      <div class="btn-group">
                        <%= link_to pricing_matrix, class: "btn btn-sm btn-info", title: "View" do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                        <%= link_to edit_pricing_matrix_path(pricing_matrix), class: "btn btn-sm btn-warning", title: "Edit" do %>
                          <i class="fas fa-edit"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Help Modal -->
<%= render 'shared/help_modal', page_name: 'pricing_matrices', page_title: 'Pricing Matrices' %>
