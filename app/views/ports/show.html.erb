<p style="color: green"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Port Details</h5>
            <div>
              <%= link_to ports_path, class: "btn btn-secondary" do %>
                <i class="fas fa-arrow-left"></i> Back
              <% end %>
              <% if policy(@port).update? %>
                <%= link_to edit_port_path(@port), class: "btn btn-warning" do %>
                  <i class="fas fa-edit"></i> Edit
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label">Name</label>
                <p class="form-control-plaintext"><%= @port.name %></p>
              </div>
              <div class="mb-3">
                <label class="form-label">Address</label>
                <p class="form-control-plaintext"><%= @port.address %></p>
              </div>
              <div class="mb-3">
                <label class="form-label">Status</label>
                <p class="form-control-plaintext">
                  <span class="<%= @port.active? ? 'text-success' : 'text-danger' %>">
                    <%= @port.active? ? 'Active' : 'Inactive' %>
                  </span>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
