<%= form_with(model: port) do |form| %>
  <% if port.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(port.errors.count, "error") %> prohibited this port from being saved:</h4>

      <ul class="mb-0">
        <% port.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :address, class: "form-label" %>
        <%= form.text_field :address, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <div class="form-check">
          <%= form.check_box :active, class: "form-check-input", checked: true %>
          <%= form.label :active, class: "form-check-label" %>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "Cancel", ports_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
